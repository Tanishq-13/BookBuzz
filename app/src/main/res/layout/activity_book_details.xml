<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!-- AppBarLayout at the top -->

    <!-- NestedScrollView for content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Image Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/topImageView"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book_svgrepo_com" />
                />
            </FrameLayout>

            <!-- Rounded Card Content -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white" >

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">

                    <!-- Course Title -->
                    <TextView
                        android:id="@+id/courseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:text="Introduction to Algorithms"
                        android:textColor="#000000"
                        android:textSize="@dimen/_17sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/bookauth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="By: Thomas Carsen"
                        android:textColor="#7B7D7D"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />
                    <!-- Rating -->
                    <TextView
                        android:id="@+id/courseRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="⭐ 3.8 (11,982 ratings)"
                        android:textColor="#555555"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="@dimen/_12sdp" />

                    <!--            &lt;!&ndash; Divider &ndash;&gt;-->
                    <!--            <View-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="1dp"-->
                    <!--                android:layout_marginVertical="8dp"-->
                    <!--                android:background="#E0E0E0" />-->

                    <!-- Course Details Header -->
                    <TextView
                        android:id="@+id/courseDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="Book Details"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />


                    <!-- Course Description -->
                    <TextView
                        android:id="@+id/courseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Become a Pro Copywriter with the complete copywriting and Content Marketing Course. Use ChatGPT, Get 70+ Pro Templates."
                        android:textColor="#909497"
                        android:textSize="@dimen/_12sdp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:background="#E0E0E0" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/open_book_svgrepo_com_5" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Subject"
                                android:fontFamily="@font/inter"
                                android:textColor="#7B7D7D"/>
                            <TextView
                                android:id="@+id/subjectName"
                                android:textSize="@dimen/_12sdp"

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Dermatology"
                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_8sdp"

                            android:src="@drawable/person_svgrepo_com"
                            app:tint="#05d3be" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Semester"
                                android:fontFamily="@font/inter"
                                android:textColor="#7B7D7D"/>
                            <TextView
                                android:id="@+id/instructorName"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_12sdp"

                                android:layout_height="match_parent"
                                android:text="6th Semester"
                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/globe_svgrepo_com" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Language"
                                android:fontFamily="@font/inter"
                                android:textColor="#7B7D7D"/>
                            <TextView
                                android:id="@+id/languageName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="en"
                                android:textSize="@dimen/_12sdp"

                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/clock_nine" />
                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Duration"
                                android:fontFamily="@font/inter"
                                android:textColor="#7B7D7D"/>
                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="3 Weeks"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </LinearLayout>

                    <!-- Price -->


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/prchs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/livedemobg"
                        android:text="Download pdf"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/Desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Description"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/courseDescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="Become a Pro Copywriter with the complete copywriting and Content Marketing Course. Use ChatGPT, Get 70+ Pro Templates."
                        android:textColor="#909497"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:id="@+id/Desc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Add Review"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.willy.ratingbar.ScaleRatingBar
                            android:id="@+id/simpleRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srb_clearRatingEnabled="true"
                            app:srb_clickable="true"
                            app:srb_drawableEmpty="@drawable/star_empty_svgrepo_com"
                            app:srb_drawableFilled="@drawable/star_filled_fiveointed_shape_svgrepo_com"
                            app:srb_isIndicator="false"
                            app:srb_minimumStars="0"
                            app:srb_numStars="5"
                            app:srb_rating="0"
                            app:srb_scrollable="true"
                            app:srb_starHeight="@dimen/_25sdp"
                            app:srb_starPadding="@dimen/_8sdp"
                            app:srb_starWidth="@dimen/_25sdp"
                            app:srb_stepSize="1">

                        </com.willy.ratingbar.ScaleRatingBar>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <EditText
                        android:id="@+id/review_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Review Subject"
                        />
                    <EditText
                        android:id="@+id/review_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Review Body"

                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addrev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/livedemobg"
                        android:text="Add Review"
                        android:layout_marginTop="@dimen/_8sdp"/>


                    <TextView
                        android:id="@+id/Reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Reviews"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reviewsRecyclerView"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>